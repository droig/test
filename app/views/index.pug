extends layout

block content
  
  .jumbotron
    h1.display-4 HN Feed
    p.lead We &lt;3 hacker news!
  
  #app
    table.table
      tbody
        tr(v-for="article in articles")
          td(@click="openUrl(article.url)") {{article.title}} 
            span.author - {{article.author}} -
          td(@click="openUrl(article.url)") {{article.articleDate | toDate}}
          td
            a.delete(href, @click.prevent="deleteArticle(article._id)")
